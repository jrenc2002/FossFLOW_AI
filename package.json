{
  "name": "fossflow-monorepo",
  "version": "1.10.7",
  "private": true,
  "description": "Monorepo for FossFLOW diagram editor and library",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "cross-env NODE_ENV=development pnpm --filter fossflow-app start",
    "dev:win": "cross-env NODE_ENV=development pnpm --filter fossflow-app start",
    "dev:lib": "pnpm --filter fossflow-lib dev",
    "dev:backend": "pnpm --filter fossflow-backend dev",
    "build": "pnpm run build:lib && pnpm run build:app",
    "build:lib": "pnpm --filter fossflow-lib build",
    "build:app": "pnpm --filter fossflow-app build",
    "test": "pnpm -r --if-present run test",
    "lint": "pnpm -r --if-present run lint",
    "clean": "pnpm -r --if-present run clean && rm -rf node_modules",
    "publish:lib": "pnpm run build:lib && pnpm --filter fossflow-lib publish",
    "docker:build": "docker build -t fossflow:local .",
    "docker:run": "docker compose -f compose.dev.yml up",
    "update-version": "node scripts/update-version.js",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^18.19.129",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "cross-env": "^10.1.0",
    "semantic-release": "^25.0.3",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "dom-to-image-more": "^3.7.1"
  },
  "overrides": {
    "lodash": "^4.17.23",
    "lodash-es": "^4.17.23",
    "tar": "^7.5.7"
  }
}
